@model IEnumerable<MovieExplorer.Models.ViewModels.MovieListViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MovieExplorer</h1>
</div>

<div class="container">
    <h2 class="my-4">Latest Movies</h2>
    @if (Model != null && Model.Any())
    {
		<div class="row">
			@foreach (var movie in Model)
			{
				<div class="col-md-3 mb-4">
					<div class="card">
						<img src="@movie.PosterPath" class="card-img-top" alt="@movie.Title" style="width:100%; height:300px; object-fit:cover;" />
						<div class="card-body">
							<h5 class="card-title">@movie.Title</h5>
							<p class="card-text">Release date: @movie.ReleaseDate</p>
							<a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Details</a>
						</div>
					</div>
				</div>
			}

		</div>
    }
    else
    {
        <p class="text-center">No latest movies available at the moment.</p>
    }
</div>